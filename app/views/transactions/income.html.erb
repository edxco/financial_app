<%= render 'layouts/nav' %>
<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">

    <div class="py-12 px-10 bg-white h-screen">

        <section class="text-gray-600 body-font">
            <div class="container px-5 py-24 mx-auto">
                <div class="flex flex-col text-center w-full mb-20">
                    <h1 class="sm:text-4xl text-3xl font-medium title-font mb-2 text-gray-900">
                        <%= @current_user.username.upcase %> your balance</h1>
                    <p class="lg:w-2/3 mx-auto leading-relaxed text-lg text-green-600">
                        <span class="font-semibold"><%= Date.today.strftime('%A: %Y - %m - %d') %></span>
                    </p>
                    <p class="inline-flex items-center px-4 py-2 border-0 font-medium text-4xl block mx-auto">
                        <!-- Heroicon name: check -->
                        <svg class="w-10 h-10 block" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="text-red-700"
                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                            </path>
                        </svg>
                        <span class="mx-3 text-red-700"><%= number_with_delimiter(@transaction_sum) %></span>
                        <span class="text-sm font-normal text-red-300 pt-4"> Expenses</span>
                    </p>
                    <p class="inline-flex items-center px-4 py-2 border-0 text-4xl font-bold block mx-auto">
                        <!-- Heroicon name: check -->
                        <svg class="w-10 h-10 block" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="text-green-700"
                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                            </path>
                        </svg>
                        <span class="mx-3 text-green-700"><%= number_with_delimiter(@income_transaction_sum) %></span>
                        <span class="text-sm font-normal text-green-300 pt-4"> Income</span>
                    </p>
                </div>
                <div class="w-full mx-auto overflow-auto">
                    <table class="table-auto w-full text-left whitespace-no-wrap">
                        <thead>
                            <tr>
                                <th
                                    class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-base text-center uppercase bg-gray-100">
                                    Income</th>
                                <th
                                    class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-base uppercase bg-gray-100">
                                    Description</th>
                                <th
                                    class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-base uppercase bg-gray-100">
                                    Date</th>
                                <th colspan="2"
                                    class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-base uppercase bg-gray-100">
                                    Price</th>
                                <th colspan="2"
                                    class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-base text-center uppercase bg-gray-100">
                                    Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            <%  @income_user_transaction.each do |transaction| %>
                            <tr>
                                <td class="px-4 py-3 text-center">
                                    <div
                                        class="w-10 h-10 mr-3 inline-flex items-center justify-center rounded-full bg-green-500 text-green-500 mb-4">
                                        <i class="p-1 fa fa-money fa-lg text-white"></i>
                                    </div>
                                </td>
                                <td class="px-4 py-3 text-green-700 font-bold">
                                    <%= transaction.name %>
                                </td>
                                <td class="px-4 py-3"><%= transaction.created_at.strftime('%d-%m-%Y') %></td>
                                <td class="p-0 m-0 py-3">
                                    <svg class="w-6 h-6 block mx-auto" fill="none" stroke="currentColor"
                                        viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            class="text-green-600"
                                            d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                                        </path>
                                    </svg>
                                </td>
                                <td class="pl-0 pr-4 pt-3 pb-4 text-lg text-green-600 font-semibold">
                                    <%= number_with_delimiter(transaction.amount) %></td>
                                <td class="text-center">
                                    <a href="/transactions/<%=transaction.id%>/edit"
                                        class="rounded-full w-7 h-7 bg-green-500 hover:bg-green-600 p-0 border-0 inline-flex items-center justify-center text-white ml-4">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                            </path>
                                        </svg>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a data-confirm="Are you sure?" data-method="delete" href="transaction"
                                        class="rounded-full w-7 h-7 bg-red-500 hover:bg-red-600 p-0 border-0 inline-flex items-center justify-center text-white ml-4">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                            </path>
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
                <div class="flex pl-4 mt-4 w-full mx-auto">
                    <a href="/transactions" class="text-green-500 inline-flex items-center md:mb-2 lg:mb-0">View my expenses
                        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                            stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                            <path d="M5 12h14M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                    <a href="/transactions/new"
                        class="flex ml-auto items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-500 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        Add New Income
                        <!-- Heroicon name: check -->
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </section>

    </div>
</div>