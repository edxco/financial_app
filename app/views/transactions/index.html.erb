<%= render 'nav' %>

<div class="py-12 bg-white h-screen">


    <div class="container-fluid cont-background d-flex  align-items-center fixed-top">
        <div class="row no-gutters d-flex justify-content-between align-items-center w-100 mx-auto mt-3">
          <div class="col-12 d-flex justify-content-between align-items-center">
            <a href="/profile"><i class="fas fa-bars h3 text-white"></i></a>
            <span class="h3 text-white ">Expenses</span>
            <i class="fas fa-search h3 text-white"></i>
          </div>
      
        
          <div class="d-flex  justify-content-center align-items-center w-100 mx-auto">
      
            <div class="mt-4 col-4 p-0">
              <span>
                <a href="/profile"><i class=" fas fa-arrow-left fa-2x text-white"></i></a>
                <hr class= "border m-1 hiden-line">
              </span>
            </div>
      
            <div class="px-0 mt-4 col-4 d-flex flex-column justify-content-center align-items-center">
              <span class="h6 text-white text-center m-0">Most Recent</span>
              <hr class= "border border-white m-1">
            </div>
      
            <div class="px-0 mt-4 pl-2 col-4 d-flex flex-column justify-content-center align-items-center">
              <span class="h6 text-grey text-center my-0 ">Most Ancient</span>
              <hr class= "border m-1 hiden-line">
            </div>
          </div>
        </div>
      </div>
      
      <div class="sticky-container">
      <div class="group-spacer">
        </div>

      <div class="card mb-2  mx-2">
        <div class="card-body d-flex justify-content-between">
          <span class="h5 text-muted m-0">Total Amount</span> <span class="h5 text-dark font-weight-bolder m-0"> $<%= @transaction_sum %></span>
          </div>
      </div>
      
          <% @user_transactions.each do |transaction| %>
      
          <div class="card mb-3 card-transaction mx-auto">
              <div class="row no-gutters">
      
                <div class="col-3 d-flex justify-content-center">
                  <i class="p-1 fas <%= transaction.icon %> fa-6x card-img align-self-center text-primary h1 m-0" ></i>
                </div>
      
                <div class="col-7 ">
                  <div class="card-body mx-0 px-3 py-2">
                  <div class= "w-100 align-items-center">
                    <span class="card-title h5 text-capitalize text-muted m-0"> <%= transaction.name %></span> <br>
                    <span class="card-text h6 text-capitalize text-muted font-italic my-0"> Category: <%= transaction.gname %></span>
                  </div>
                    
                  <div class="d-flex mt-1">
                  <p class="card-text text-muted mb-0 h6 "><%= transaction.created_at.strftime('%d-%m-%Y') %></p>
                  <%= link_to "Edit", "/transactions/#{transaction.id}/edit", class: "text-primary ml-3 h6 font-weight-bold" %>
      
                  <%= link_to 'Delete', transaction, method: :delete, data: {confirm: 'Are you sure?'}, class: "text-danger ml-3 h6 font-weight-bold" %>
                  </div>
                    
                  </div>
                </div>
      
                <div class="col-2  d-flex justify-content-center pt-1">
                    <span class="card-text h5 text-center mt-3 "> $<%= transaction.amount %></span>
                  </div>
      
              </div>
      
            </div>
            
          <% end %>
      
          </div>
      
        <div class="container-fluid espace-button d-flex  align-items-center">
        
        </div>
       
        <div class="container-fluid cont-button d-flex align-items-center fixed-bottom">
        <a href="/transactions/new" class='w-100 m-2'><div class=" d-flex justify-content-center align-items-center  border border-white w-100 button-transaction">
          <span class="h5 text-white m-0 py-2">ADD NEW</span>
        </div></a>
      </div>


</div>