<div>
    <%= form_with model: @transaction, method: "post" do |f| %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="md:w-1/2 bg-gray-100 rounded-lg p-8 flex flex-col md:mx-auto w-full mt-10 md:mt-0">
        <h2 class="text-gray-900 text-lg font-medium title-font mb-5">Add a new expense</h2>
        <div class="relative mb-4">
            <label for="full-name" class="leading-7 text-sm text-gray-600">Expense name</label>
            <%= f.text_field :name, class: "w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
        </div>
        <div class="relative mb-4">
            <label for="email" class="leading-7 text-sm text-gray-600">Amount</label>
            <div class="mt-1 flex rounded-md shadow-sm">
                <span
                    class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
                    $
                </span>
                <%= f.text_field :amount, class: "w-full bg-white rounded-r border-t border-r border-b border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out", placeholder: "0.00" %>
            </div>
        </div>
        <div class="relative mb-4 flex ml-6 items-center">
           
                <%= f.select :group_id, group_for_select, prompt: "Select", class: "w-full rounded border appearance-none border-gray-300 py-2 focus:outline-none focus:ring-2 focus:ring-green-200 focus:border-green-500 text-base pl-3 pr-10" %>
                <span
                    class="absolute right-0 top-0 h-full w-10 text-center text-gray-600 pointer-events-none flex items-center justify-center">
                    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                        stroke-width="2" class="w-4 h-4" viewBox="0 0 24 24">
                        <path d="M6 9l6 6 6-6"></path>
                    </svg>
                </span>
            </div>
            

        <div class="relative mb-4 flex ml-6 items-center">
            <p class="text-xs text-gray-500 mt-3">If no option is selected the transaction will be consider as an Income</p>
        </div>
        <button
            class="text-white bg-green-500 border-0 py-2 px-8 focus:outline-none hover:bg-green-600 rounded text-lg">Add
            new expense</button>
        <p class="text-xs text-gray-500 mt-3">To save money, or to be careful with money ... It's up to you!</p>
    </div>
    <% end %>

</div>